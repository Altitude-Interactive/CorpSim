{
  "name": "corpsim",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo Use app-specific dev commands",
    "api:dev": "pnpm -C apps/api dev",
    "api:test": "vitest run --config apps/api/vitest.config.ts",
    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:lint": "pnpm -C apps/web lint",
    "web:typecheck": "pnpm -C apps/web typecheck",
    "worker:dev": "pnpm -C apps/worker dev",
    "worker:once": "pnpm -C apps/worker once",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "verify": "pnpm typecheck && pnpm lint && pnpm test && pnpm api:test && pnpm web:typecheck && pnpm web:lint && pnpm web:build",
    "verify:full": "pnpm verify && pnpm worker:once -- --ticks 1",
    "sim:advance": "tsx scripts/sim-advance.ts",
    "sim:reset": "tsx scripts/sim-reset.ts",
    "sim:seed": "pnpm -C packages/db seed",
    "release:entry": "node scripts/release-entry.mjs",
    "release:check": "node scripts/check-release-entry.mjs",
    "release:check-tag": "node scripts/check-tag-version.mjs",
    "release:cut": "node scripts/release-cut.mjs",
    "maintenance:on": "node scripts/maintenance.mjs on",
    "maintenance:off": "node scripts/maintenance.mjs off",
    "maintenance:status": "node scripts/maintenance.mjs status"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8",
    "@prisma/client": "^6.2.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.8",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.1",
    "prisma": "^6.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
