{
  "name": "corpsim",
  "version": "0.9.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo Use app-specific dev commands",
    "prisma:generate": "node scripts/prisma-generate.mjs",
    "postinstall": "pnpm prisma:generate",
    "preapi:dev": "pnpm prisma:generate",
    "api:dev": "pnpm -C apps/api dev",
    "preworker:dev": "pnpm prisma:generate",
    "api:test": "vitest run --config apps/api/vitest.config.ts",
    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:lint": "pnpm -C apps/web lint",
    "web:typecheck": "pnpm -C apps/web typecheck",
    "worker:dev": "pnpm -C apps/worker dev",
    "preworker:once": "pnpm prisma:generate",
    "worker:once": "pnpm -C apps/worker once",
    "lint:boundaries": "node scripts/check-import-boundaries.mjs",
    "lint": "eslint . --ext .ts",
    "pretypecheck": "pnpm prisma:generate",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "verify": "pnpm typecheck && pnpm lint && pnpm lint:boundaries && pnpm test && pnpm api:test && pnpm web:typecheck && pnpm web:lint && pnpm web:build",
    "verify:full": "pnpm verify && pnpm worker:once -- --ticks 1",
    "sim:advance": "tsx scripts/sim-advance.ts",
    "sim:reset": "tsx scripts/sim-reset.ts",
    "sim:seed": "pnpm -C packages/db seed",
    "sim:stats": "tsx scripts/sim-stats.ts",
    "release:entry": "node scripts/release-entry.mjs",
    "release:check": "node scripts/check-release-entry.mjs",
    "release:check-tag": "node scripts/check-tag-version.mjs",
    "release:cut": "node scripts/release-cut.mjs",
    "maintenance:on": "node scripts/maintenance.mjs on",
    "maintenance:off": "node scripts/maintenance.mjs off",
    "maintenance:status": "node scripts/maintenance.mjs status"
  },
  "dependencies": {
    "@corpsim/db": "workspace:*",
    "@corpsim/shared": "workspace:*",
    "@corpsim/sim": "workspace:*",
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@prisma/client": "^6.19.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.18",
    "@nestjs/testing": "^11.1.13",
    "@types/node": "^22.19.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.56.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "prisma": "^6.19.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": "10.5.0",
      "glob@>=11.0.0 <11.1.0": "11.1.0",
      "lodash@>=4.0.0 <=4.17.22": "4.17.23"
    }
  }
}
