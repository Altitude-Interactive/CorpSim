########################################
# Global / Environment
########################################
NODE_ENV=development
APP_NAME=CorpSim
APP_URL=http://localhost:3001
API_URL=http://localhost:3000

########################################
# Database (PostgreSQL / Prisma)
########################################
DATABASE_URL=postgresql://user:password@postgres:5432/corpsim
DB_HOST=postgres
DB_PORT=5432
DB_NAME=corpsim
DB_USER=user
DB_PASSWORD=password

########################################
# Redis (queues, cache, ticks)
########################################
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

########################################
# Auth (future-proof even if solo)
########################################
JWT_SECRET=change_me_dev_only
SESSION_SECRET=change_me_dev_only

########################################
# Simulation / Game Engine
########################################
TICK_INTERVAL_MS=60000
SIMULATION_SPEED=1
MAX_TICKS_PER_RUN=10
INVARIANTS_CHECK_EVERY_TICKS=10
ON_INVARIANT_VIOLATION=stop
BOT_ENABLED=true
BOT_COUNT=25
BOT_ITEMS=IRON_ORE,IRON_INGOT,HAND_TOOLS
BOT_SPREAD_BPS=500
BOT_MAX_NOTIONAL_PER_TICK_CENTS=50000
SHIPMENT_BASE_FEE_CENTS=250
SHIPMENT_FEE_PER_UNIT_CENTS=15

########################################
# Frontend (Next.js public vars)
########################################
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CorpSim
NEXT_PUBLIC_SHIPMENT_BASE_FEE_CENTS=250
NEXT_PUBLIC_SHIPMENT_FEE_PER_UNIT_CENTS=15

########################################
# Logging / Debug
########################################
LOG_LEVEL=debug
ENABLE_METRICS=false

########################################
# Docker / Deployment helpers
########################################
POSTGRES_DB=corpsim
POSTGRES_USER=user
POSTGRES_PASSWORD=password
